<div class="container" style="margin-top: 2rem; margin-left: 3rem; font-size:15px padding-left:0px;">
  <div class="d-inline-block text-left">
<h4 class="mb-5">新規会員登録</h4>
<div style="width:1000px">
<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<div class="">
  <div class="field row ">
    <div class="col-4">
    <%= f.label :名前, class:""%></div>
    <div class="col-4 ">
      (姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"form-control" %></div>
    <div class="col-4 ">
      (名)
    <%= f.text_field :first_name, class:"form-control" %></div>

  </div>

   <div class="field row mb-3">
    <%= f.label :フリガナ, class:"col-4"%>
    <div class="col-4">
      (セイ)
    <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "name", class:"form-control" %></div>
    <div class="col-4">
      (メイ)
    <%= f.text_field :kana_first_name, class:"form-control" %></div>

  </div>

  <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :ユーザーネーム, class:""%>
    </div>
    <div class="col-4">
    <%= f.text_field :username, class:"form-control" %>
    </div>
  </div>

  <div class="field row mb-3 ">
    <div class="col-4">
    <%= f.label :メールアドレス, class:""%>
    </div>
    <div class="col-4">
    <%= f.email_field :email, class:"form-control" %></div>
  </div>

  <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :郵便番号（ハイフンなし）, class:""%>
    </div>
    <div class="col-4">
    <%= f.text_field :zipcode, class:"form-control" %>
    </div>
  </div>

    <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :住所, class:""%>
    </div>
    <div class="col-8">
    <%= f.text_field :address, class:"form-control" %>
    </div>
  </div>

    <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :電話番号（ハイフンなし）, class:""%>
    </div>
    <div class="col-4">
    <%= f.text_field :phone_number, class:"form-control" %>
    </div>
  </div>

  <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :パスワード（6文字以上）, class:%></div>
    <div class="col-4">
    <% if @minimum_password_length %>
 <!--   <em>(<%#= @minimum_password_length %> 文字以上)</em> -->
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %></div>
  </div>

  <div class="field row mb-3">
  <div class="col-4">
    <%= f.label :パスワード（確認用）, class:%></div>
    <div class="col-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %></div>
  </div>

  <div class="actions text-center mt-5 mb-5">
    <%= f.submit "新規登録", class:"btn btn-sm btn-success btn-lg" %>
  </div>
<% end %>

<h5><%= render "public/shared/links" %> からログインしてください</h5>
</div>
</div>
</div></div>
