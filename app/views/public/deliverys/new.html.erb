<div class="container" style="margin-top: 2rem; margin-left: 3rem; font-size:15px padding-left:0px;">
  <div class="d-inline-block text-left">
<h4 class="mb-5">配達情報入力</h4>
<div style="width:1000px">
<%= form_with model: @delivery, url: deliverys_path do |f| %>

<div class="">

  <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :場所, class:""%>
    </div>
    <div class="col-4">
    <%= f.text_field :place, class:"form-control" %>
    </div>
  </div>

    <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :配達可能の時間帯, class:""%>
    </div>
    <div class="col-8">
    <%= f.text_field :section, class:"form-control" %>
    </div>
  </div>

    <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :配達可能個数, class:""%>
    </div>
    <div class="col-4">
    <%= f.text_field :quantity, class:"form-control" %>
    </div>
  </div>

  <div class="actions text-center mt-5 mb-5">
    <%= f.submit "配達を始める", class:"btn btn-sm btn-success btn-lg" %>
  </div>
<% end %>
</div>
</div>
</div>
</div>
