<div class="container" style="margin-top: 2rem; margin-left: 3rem; font-size:15px padding-left:0px;">
  <div class="d-inline-block text-left">
<h4 class="mb-5">会員情報編集</h4>
<div style="width:1000px">
<%= form_with model: @customer,url: customer_path(current_customer) do |f| %>
  <%#= render 'layouts/errors', obj: @customer %>
<div class="">
  <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :ユーザーネーム, class:""%>
    </div>
    <div class="col-4">
    <%= f.text_field :username, class:"form-control" %>
    </div>
  </div>
  <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :名前, class:""%></div>
    <div class="col-4">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"form-control" %></div>
    <div class="col-4">
    <%= f.text_field :first_name, class:"form-control" %></div>
  </div>

   <div class="field row mb-3">
    <%= f.label :フリガナ, class:"col-4"%>
    <div class="col-4">

    <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "name", class:"form-control" %></div>
    <div class="col-4">

    <%= f.text_field :kana_first_name, class:"form-control" %></div>

  </div>

    <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :郵便番号（ハイフンなし）, class:""%>
    </div>
    <div class="col-4">
    <%= f.text_field :zipcode, class:"form-control" %>
    </div>
  </div>

    <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :住所, class:""%>
    </div>
    <div class="col-8">
    <%= f.text_field :address, class:"form-control" %>
    </div>
  </div>

     <div class="field row mb-3">
    <div class="col-4">
    <%= f.label :電話番号（ハイフンなし）, class:""%>
    </div>
    <div class="col-4">
    <%= f.text_field :phone_number, class:"form-control" %>
    </div>
  </div>

    <div class="field row mb-3 ">
    <div class="col-4">
    <%= f.label :メールアドレス, class:""%>
    </div>
    <div class="col-4">
    <%= f.email_field :email, class:"form-control" %></div>
  </div>

 <div class="row text-center mt-5 mb-5">
  <div class="actions col-2" style="margin-left: 20rem">
    <%= f.submit "編集内容保存", class:"btn btn-success" %>
  </div>
  </div>
<% end %>

</div>
</div>
</div></div>
